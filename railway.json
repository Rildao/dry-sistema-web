{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "installCommand": "npm install",
        "buildCommand": " npm run build", 
        "useYarn": false
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "npx serve dist -l ${{ env.PORT }}",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}